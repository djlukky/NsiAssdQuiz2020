<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".OtherClass.AboutDeveloper">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary" />


    <ImageView
        android:id="@+id/abt_devloper"
        android:layout_width="290dp"
        android:layout_height="280dp"
        android:layout_below="@+id/category_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/about_devloper" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abt_devloper"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:text="@string/about_devloper"
        android:textSize="20sp" />


</RelativeLayout>